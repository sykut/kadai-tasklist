
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_tasks.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
<div class="row">
      <div class="form-group col-sm-4 col-lg-3">
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>

      <div class="form-group col-sm-offset-2 col-sm-4 col-lg-offset-3 col-lg-3">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
</div>
        <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>